{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="row">
      <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 class="mt-5">Search for Availability</h1>
            <form action="" method="get" novalidate class="needs-validation">
              <div class="row" id="reservation-dates">
                <div class="col" >
                  <div class="mb-3">
                    
                    <input required class="form-control"  placeholder="Arrival"aria-describedby="startDateHelp" autocomplete="off">
                  </div>
                </div>
              
                <div class="col" >
                  <div class="mb-3">
                    <input required  class="form-control"  placeholder="Departure"aria-describedby="endDateHelp" autocomplete="off">
                  </div>
                </div>

              </div>
              <button type="submit" class="btn btn-primary">Search</button>
              </form>
              <button id="test-btn" class="btn btn-primary">Test</button>
        </div>
        
    </div>
  </div>
{{end}}